{
  "name": "Ubuntu with uv",
  // Using the standard Ubuntu dev container image
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  // This runs the curl script and updates the PATH for the terminal
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && echo 'export PATH=\"$HOME/.local/bin:$PATH\"' >> ~/.bashrc",

  "customizations": {
    "vscode": {
      "settings": {
        // This ensures the VS Code terminal sees the new uv path immediately
        "terminal.integrated.env.linux": {
          "PATH": "${env:PATH}:${home}/.local/bin"
        }
      },
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff"
      ]
    }
  },

  // Ensures the 'vscode' user has the right permissions
  "remoteUser": "vscode"
}

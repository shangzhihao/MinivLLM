{
  "name": "MinivLLM - Debian Slim & uv",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && echo 'export PATH=\"$HOME/.local/bin:$PATH\"' >> ~/.bashrc && $HOME/.local/bin/uv sync",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.env.linux": {
          "PATH": "${env:PATH}:${home}/.local/bin"
        },
        "python.defaultInterpreterPath": "${workspaceRoot}/.venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml"
      ]
    }
  },

  "remoteUser": "vscode"
}